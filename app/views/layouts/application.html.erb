<!DOCTYPE html>
<html>
  <head>
    <title>DishesHub</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'http://fonts.googleapis.com/icon?family=Material+Icons' %>
  </head>

  <body>

    <nav>
    <div class="nav-wrapper">
      <%= link_to root_path, { class: "brand-logo center" } do %>
       <i class="material-icons">room_service</i> Dishes Hub
      <% end %>
      <ul class="left hide-on-med-and-down">
        <li><%= link_to "Categories", categories_path %></li>
        <li><a href="badges.html">About us</a></li>
        <li class="active"><a href="collapsible.html">Contacts</a></li>
      </ul>
      <ul class="right hide-on-med-and-down">
        <% if user_signed_in? %>

        <form class="col s12">
    <div class="row">
        <ul id="dropdown1" class="dropdown-content">

            <li><a href="#!">Settings</a></li>
            <li><a href="#!">Profile</a></li>
            <li class="divider"></li>
            <li><%= link_to 'Sign out', destroy_user_session_path, :method => :delete %></li>
      </ul>
      <div class="nav-wrapper">
        <ul class="right hide-on-med-and-down">
          <li><a class="dropdown-button" href="#!" data-activates="dropdown1"><span>Hello, <%= current_user.login %></span><i class="material-icons right">arrow_drop_down</i></a></li>
        </ul>
      </div>
          </div>
        </div>
      </form>


     </ul>
       <% else %>
     <ul id="nav-mobile" class="right hide-on-med-and-down">
       <li><%= link_to 'Sign in', new_user_session_path %></li>
        <li><%= link_to 'Sign up', new_user_registration_path %></li>
      </ul>
 <% end %>

  </nav>
 </nav>
 <div class="container">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    <%= yield %>
  </div>

  </body>
</html>
