<h1>Create a recipe</h1>
<div class="row">
     <div class="col s12">
<%= form_for @recipe, url: {action: "create"} do |f| %>
<p>
<%= label_tag(:category_id, "Choose Category") %>
<select name="category_id" >
<% @categories.each do |category|%>
    <option value="<%=category['id']%>"><%=category['title']%> </option>
<%end%>
</select %>
</p>
<p>
<%= f.label :name %><br>
<%= f.text_field :name %>
</p>

  <%= f.label :manual %><br>
  <%= f.text_area :manual,  cols: 100, rows: 100 %>
</p>

<p>
<%= f.submit "Add Recipe", class: "waves-effect waves-light btn-large" %>
</p>
<% end %>
</div>
</div>
